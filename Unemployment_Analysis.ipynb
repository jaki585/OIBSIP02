# Importing the libraries we need
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
from google.colab import files

# Uploading both CSV files
print("Upload both unemployment datasets:")
uploaded_1 = files.upload()
uploaded_2 = files.upload()

# Reading the files
df1 = pd.read_csv("Unemployment in India.csv")
df2 = pd.read_csv("Unemployment_Rate_upto_11_2020.csv")

# Cleaning column names (removing unwanted spaces)
df2.columns = df2.columns.str.strip()

# Finding the date column automatically
date_column = [col for col in df2.columns if "date" in col.lower()][0]

# Converting date column into proper datetime format
df2[date_column] = pd.to_datetime(df2[date_column], errors="coerce")
df2 = df2.dropna(subset=[date_column])

# Trend of unemployment over time
plt.figure(figsize=(12,6))
plt.plot(df2[date_column], df2["Estimated Unemployment Rate (%)"])
plt.title("Unemployment Rate Trend in India")
plt.xlabel("Date")
plt.ylabel("Unemployment Rate (%)")
plt.grid(True)
plt.show()

# Comparing unemployment across regions
plt.figure(figsize=(12,6))
sns.boxplot(data=df2, x="Region", y="Estimated Unemployment Rate (%)")
plt.xticks(rotation=90)
plt.title("Region-wise Unemployment Comparison")
plt.show()

# Heatmap using only numeric columns
numeric_data = df2.select_dtypes(include=["float64", "int64"])

plt.figure(figsize=(8,5))
sns.heatmap(numeric_data.corr(), annot=True, cmap="coolwarm")
plt.title("Correlation Heatmap")
plt.show()

# Average unemployment in each region
region_avg = (
    df2.groupby("Region")["Estimated Unemployment Rate (%)"]
    .mean()
    .sort_values()
)

plt.figure(figsize=(12,8))
region_avg.plot(kind="bar")
plt.title("Average Unemployment Rate by Region")
plt.xlabel("Region")
plt.ylabel("Unemployment Rate (%)")
plt.grid(True)
plt.show()

region_avg
